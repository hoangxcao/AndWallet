<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFFAFF"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="40sp"
    tools:context="hu.ait.android.andwallet.SummaryActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/text_summary_notification"
        android:textSize="18sp"
        android:textStyle="italic" />

    <include layout="@layout/summary_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include layout="@layout/summary_income" />

        <include layout="@layout/summary_expense" />

    </LinearLayout>

    <include layout="@layout/summary_balance" />

</LinearLayout>
